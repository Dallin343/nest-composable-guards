{
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "node16",
        "target": "es2022",
        "baseUrl": "./",
    
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node16",
        "noEmit": true
      },
    "include": ["src/**/*.ts", "./index.ts"],
    "exclude": ["**/*.spec.ts"]
}
  